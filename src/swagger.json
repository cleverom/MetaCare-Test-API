        "description": "Comment Object",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/id/comment"
            }
          }
        }
      },
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "OK",
          "schema": {
            "$ref": "#/id/comment"
          }
        },
        "400": {
          "description": "Failed. Bad post data."
        }
      }
    }

  },
  "/id/comment": {
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "ID of the comment that we want to match",
        "type": "string"
      }
    ],
    "get": {
      "tags": ["Comment"],
      "summary": "Get comment with given ID",
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
